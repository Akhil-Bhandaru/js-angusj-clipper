{
  "name": "js-angusj-clipper",
  "version": "1.0.0",
  "description": "Polygon and line clipping and offsetting library for Javascript / Typescript - a port of Angus Johnson's clipper to WebAssembly / Asm.JS",
  "main": "universal/index.js",
  "typings": "universal/index.d.ts",
  "scripts": {
    "pull-docker-image": "docker pull trzeci/emscripten",
    "prepublishOnly": "npm run clean && npm run lint && npm run build && npm run test",
    "travis": "npm run prepublishOnly",
    "test": "jest -t unit",
    "benchmark": "jest -t benchmark",
    "lint": "tslint -p .",
    "clean": "rimraf ./dist && rimraf ./universal && rimraf ./web",
    "build": "npm run build:universal && npm run build:web",
    "build:universal": "npm run build:ts && npm run build:asm && shx mv dist universal",
    "build:web": "npm run build:ts && npm run build:asm -- --env web && shx mv dist web",
    "build:ts": "tsc -p .",
    "build:asm": "npm run pull-docker-image && node build/compile-asm",
    "tslint-check": "tslint-config-prettier-check ./tslint.json",
    "prettier-all": "prettier --write \"src/lib/**/*.ts\" \"build/**/*.js\" \"__tests__/**/*.ts\""
  },
  "files": [
    "universal",
    "web"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/xaviergonz/js-angusj-clipper.git"
  },
  "keywords": [
    "polygon",
    "clipping",
    "offseting",
    "boolean",
    "geometry"
  ],
  "author": "Javier Gonzalez Garces <xaviergonz@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/xaviergonz/js-angusj-clipper/issues"
  },
  "homepage": "https://github.com/xaviergonz/js-angusj-clipper#readme",
  "devDependencies": {
    "@types/jest": "^23.3.5",
    "@types/node": "^10.12.0",
    "jest": "^23.6.0",
    "prettier": "^1.14.3",
    "rimraf": "^2.6.2",
    "shelljs": "^0.8.2",
    "ts-jest": "^23.10.4",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.15.0",
    "typescript": "^3.1.3",
    "shx": "^0.3.2",
    "command-line-args": "^5.0.2"
  }
}
